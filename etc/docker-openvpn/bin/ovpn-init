#!/bin/bash

# Check root is running this...
if [ "$(id -u)" != "0" ]; then
echo Error: You must be root to run this. 2>&1
exit 1
fi

# Setup pyovpn env vars...
. /config/exports

# Needed for certain operations inside the python script...
export CONFIG_JSON=/config/etc/config.json
export WIN_INSTALL=/config/etc/exe/OpenVPN_Installer.exe

# Execute the python script...
python /config/bin/_ovpn-init "$@"
